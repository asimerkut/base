<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">
    <!--
        Added the constraints for entity PerExcuse.
    -->
    <changeSet id="20181020094120-2" author="jhipster">
        
        <addForeignKeyConstraint baseColumnNames="person_id"
                                 baseTableName="per_excuse"
                                 constraintName="fk_per_excuse_person_id"
                                 referencedColumnNames="id"
                                 referencedTableName="per_person"/>

        <addForeignKeyConstraint baseColumnNames="izin_id"
                                 baseTableName="per_excuse"
                                 constraintName="fk_per_excuse_izin_id"
                                 referencedColumnNames="id"
                                 referencedTableName="def_item"/>

        <addForeignKeyConstraint baseColumnNames="fiscal_period_id"
                                 baseTableName="per_excuse"
                                 constraintName="fk_per_excuse_fiscal_period_id"
                                 referencedColumnNames="id"
                                 referencedTableName="fiscal_period"/>

    </changeSet>
</databaseChangeLog>
